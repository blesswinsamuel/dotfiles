#define base01 #282828
#define base02 #383838
#define base03 #585858
#define base04 #b8b8b8
#define base05 #d8d8d8
#define base06 #e8e8e8
#define base07 #f8f8f8
#define base08 #ab4642
#define base09 #dc9656
#define base0A #f7ca88
#define base0B #a1b56c
#define base0C #86c1b9
#define base0D #7cafc2
#define base0E #ba8baf
#define base0F #a16946
#define background_opacity 95

*foreground:   base05
*background:   [background_opacity]base00
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base08
*color10:      base0B
*color11:      base0A
*color12:      base0D
*color13:      base0E
*color14:      base0C
*color15:      base07

*color16:      base09
*color17:      base0F
*color18:      base01
*color19:      base02
*color20:      base04
*color21:      base06

! URxvt

URxvt.font: xft:monospace:size=12
URxvt.depth: 32
URxvt.perl-ext-common: ...,resize-font,tabbedex,...

! Disable Ctrl + Shift keybindings
 URxvt.iso14755: false
 URxvt.iso14755_52: false

! urxvt resize-font
URxvt.keysym.C-equal:        resize-font:bigger
URxvt.keysym.C-shift-equal:  resize-font:bigger
URxvt.keysym.C-minus:        resize-font:smaller
URxvt.keysym.C-shift-minus:  resize-font:smaller
URxvt.keysym.C-0:            resize-font:reset
URxvt.resize-font.step: 1

! tabbar
URxvt.tabbed.autohide: true
URxvt.keysym.C-t: perl:tabbedex:new_tab
URxvt.keysym.C-T: perl:tabbedex:new_tab
URxvt.keysym.C-Tab: perl:tabbedex:next_tab
URxvt.keysym.C-shift-Tab: perl:tabbedex:prev_tab
URxvt.keysym.C-left: perl:tabbedex:prev_tab
URxvt.keysym.C-right: perl:tabbedex:next_tab
URxvt.keysym.C-shift-left: perl:tabbedex:move_tab_left
URxvt.keysym.C-shift-right: perl:tabbedex:move_tab_right
URxvt.keysym.C-shift-r: perl:tabbedex:rename_tab

! scrollbar
URxvt*scrollBar:          true
URxvt*thickness:          4
URxvt*scrollColor:        base05
URxvt*troughColor:        #FF0000
URxvt*scrollBar_floating: true
URxvt*scrollBar_right:    true
URxvt*scrollstyle:        plain
URxvt*urgentOnBell:       true

! Change Copy/Paste keybinding
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
